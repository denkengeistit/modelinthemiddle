{
  "mcp": {
    "servers": {
      "mcp-framework-paperless": {
        "command": "node",
        "args": ["src/mcp-framework-standalone/dist/simplified-server/index.js"],
        "env": {
          "OPENAI_API_KEY": "your-openai-api-key-here",
          "TARGET_MCP_COMMAND": "node",
          "TARGET_MCP_ARGS": "paperless-mcp/src/index.js,http://your-paperless-url:8000,your-api-token"
        }
      }
    }
  }
}