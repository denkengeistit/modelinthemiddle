# MCP Framework Configuration

# OpenAI API Key (for Model Bridge intelligence)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative: Anthropic API Key
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Configuration
MCP_FRAMEWORK_MODEL_PROVIDER=openai
MCP_FRAMEWORK_MODEL_NAME=gpt-4o-mini
MCP_FRAMEWORK_TEMPERATURE=0.7
MCP_FRAMEWORK_MAX_TOKENS=1000

# Target MCP Server Configuration
# Path to the complex MCP server you want to simplify
MCP_TARGET_SERVER_COMMAND=node
MCP_TARGET_SERVER_ARGS=../everything/index.js,stdio
MCP_TARGET_SERVER_CWD=

# Debug and Logging
MCP_FRAMEWORK_DEBUG=false
MCP_FRAMEWORK_LOG_LEVEL=info

# Training and Learning
MCP_FRAMEWORK_ENABLE_LEARNING=true
MCP_FRAMEWORK_TRAINING_DATA_LIMIT=1000

# Cache Configuration
MCP_FRAMEWORK_CACHE_ENABLED=true
MCP_FRAMEWORK_CACHE_TTL=3600